<!DOCTYPE html>
<html>
  <head>
    <title>InquiryTestApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">
      <%= image_tag '/assets/oway_black.png' %>
    </a>
    <form class="form-inline">
      <input class="form-control mr-sm-2" type="search" placeholder="商品を検索する" aria-label="Search">
    </form>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="mr-auto"></div>
      <ul class="navbar-nav my-2 my-lg-0">
        <li class="nav-item active">
          <%= link_to "HOME", welcome_index_path, class: "menu-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Agricosmetica", welcome_agricosmetica_path, class: "menu-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "About", welcome_about_path, class: "menu-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact", inquiry_path, class: "menu-link" %>
        </li>
      </ul>
    </div>
  </nav>

    <%= yield %>

  <!-- Footer -->
  <footer class="page-footer font-small special-color-dark pt-4">

    <!-- Footer Elements -->
    <div class="footer-container">

      <!-- Social buttons -->
      <ul class="list-unstyled list-inline text-center">
        <li class="list-inline-item">
          <a class="btn-floating btn-fb mx-1" href="https://www.facebook.com">
            <i class="fab fa-facebook-f"> </i>
          </a>
        </li>
        <li class="list-inline-item">
          <a class="btn-floating btn-instagram mx-1" href="https://www.facebook.com">
            <i class="fab fa-instagram"> </i>
          </a>
        </li>
        <li class="list-inline-item">
          <a class="btn-floating btn-youtube mx-1" href="https://www.facebook.com">
            <i class="fab fa-youtube"> </i>
          </a>
        </li>
      </ul>
      <!-- Social buttons -->

    </div>
    <!-- Footer Elements -->



    <!-- Copyright -->
    <div class="footer-copyright text-center py-3">
      <p><%= link_to "HOME", welcome_index_path %> | <%= link_to "About", welcome_about_path %> | <%= link_to "Agricosmetica", welcome_agricosmetica_path %> | <a href="">Products</a> | <%= link_to "Contact", inquiry_path %></p>
      <hr class="footer_hr">
      <p>© 2020 Copyright OWAY JAPAN</p>
    </div>
    <!-- Copyright -->

  </footer>
  <!-- Footer -->

  </body>
</html>
